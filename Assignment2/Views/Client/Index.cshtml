@model Assignment2.Models.ViewModels.ClientsViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                FirstName
            </th>
            <th>
                LastName
            </th>
            <th>
                Birthdate
            </th>
            <th>
                Full Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Clients) {
            <tr>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.BirthDate
                </td>
                <td>
                    @item.FullName
                </td>
                <td>
                    <a asp-action="Index" asp-route-id="@item.Id">Subscriptions</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.Subscriptions != null)
{
    <h3>Client's Subscriptions to Brokers</h3>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Subscriptions)
            {
                <tr>
                    <td>
                        @item.Broker.Title
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
