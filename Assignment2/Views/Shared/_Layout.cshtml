<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EntityFramework</title>
    <link rel="stylesheet" href="~/bootstrap.css" />
    <link rel="stylesheet" href="~/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-info border-bottom box-shadow mb-3">
            <img src="/house.png" alt="HTML5 Icon" style="width:32px;height:32px;">
            <b><a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">&ensp; Real Estate Market</a></b>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Client" asp-action="Index">Clients</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Broker" asp-action="Index">Brokerages</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container ">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-info">
        <div class="container text-light">
            &copy; 2022 - EntityFramework
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>